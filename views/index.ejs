      --bg: #02030a;
      --bg-soft: #050919;
      --panel: #070d22;
      --panel-soft: #0d1635;
      --accent: #49ffb3;
      --accent-soft: rgba(73,255,179,0.12);
      --danger: #ff3b6b;
      --text-main: #f4f5ff;
      --text-muted: #8088aa;
      --border-subtle: #181f3c;
      --shadow-soft: 0 18px 45px rgba(0,0,0,0.8);
      --card-radius: 16px;
    }
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
      font-family: system-ui, -apple-system, BlinkMacSystemFont, "SF Pro Text",
        "Segoe UI", sans-serif;
